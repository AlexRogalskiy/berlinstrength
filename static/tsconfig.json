{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "pretty": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.tsx"
  ]
}
