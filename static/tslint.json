{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "rules": {
        "interface-name": [true, "never-prefix"],
        "interface-over-type-literal": false,
        "quotemark": [true, "single", "jsx-double"],
        "type-literal-delimiter": false,
        "trailing-comma": [
             true,
	     {
                 "multiline": {
                      "objects": "always",
                      "arrays": "always",
                      "functions": "always",
                      "typeLiterals": "never"
                 },
                 "esSpecCompliant": true
             }
        ]
    },
    "rulesDirectory": []
}
